<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<% if user_signed_in? %>
  <%= render 'form', tweet: @tweet %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.get_user_name %></td>
        <td><img src="<%= tweet.get_user_photo %>" width="50" height="50"></td>
      </tr>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= tweet.likes.count %> <%= (tweet.likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td>
        <% pre_like = tweet.likes.find { |like| like.user_id == current_user.id} %>
        <% if pre_like %>
          <%= button_to 'Unlike', tweet_like_path(tweet.id, pre_like), method: :delete %>
        <% else %>
          <%= button_to 'Like', tweet_likes_path(tweet_id: tweet.id), method: :post %>
        <% end %>
        </td>
        <% if user_signed_in? && tweet.user_id == current_user.id %>
          <td><%= link_to 'Show', tweet %></td>
          <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>





<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= paginate @tweets %>
  </div>
</div>
